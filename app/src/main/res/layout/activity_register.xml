<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <EditText
        android:layout_width="200dp"
        android:id="@+id/inputName"
        android:layout_height="wrap_content"
        android:hint="Имя"/>
    <EditText
        android:layout_width="200dp"
        android:inputType="textCapWords"
        android:id="@+id/inputSurname"
        android:layout_below="@+id/inputName"
        android:layout_height="wrap_content"
        android:hint="Фамилия"/>
    <EditText
        android:layout_width="200dp"
        android:inputType="textCapWords"
        android:layout_height="wrap_content"
        android:id="@+id/inputPosition"
        android:layout_below="@+id/inputSurname"
        android:hint="Должность"/>
    <EditText
        android:layout_width="200dp"
        android:inputType="textCapWords"
        android:layout_height="wrap_content"
        android:id="@+id/inputEmail"
        android:layout_below="@+id/inputPosition"
        android:hint="Почта"/>
    <EditText
        android:layout_width="200dp"
        android:inputType="textCapWords"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputEmail"
        android:id="@+id/inputPassword"
        android:hint="Пароль"/>
    <EditText
        android:layout_width="200dp"
        android:inputType="textCapWords"
        android:layout_height="wrap_content"
        android:id="@+id/inputConfirmPassword"
        android:layout_below="@+id/inputPassword"
        android:hint="Подтвердите пароль"/>
    <ImageView
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_marginLeft="210dp"
        android:clickable="true"/>
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputConfirmPassword"
        android:layout_marginTop="100dp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:text="Зарегистрироваться"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/purple_200"
        android:id="@+id/btnRegister"/>
    <Button
        android:id="@+id/btnLinkToLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnRegister"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/cardview_light_background"
        android:text="Зарегистриованы? Войдите"
        android:textColor="#2196F3"
        style="@style/Widget.MaterialComponents.Button.TextButton"/>

</RelativeLayout>